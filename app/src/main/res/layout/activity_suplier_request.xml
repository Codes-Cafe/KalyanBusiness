<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offwhite"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/back"
                android:padding="5dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/grey_10"
                android:src="@drawable/ic_baseline_arrow_back"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:foreground="@drawable/ripple_effect_corner_15"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#596C84"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor Request"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/font_regular"
                android:textColor="@color/colorPrimary"
                />
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ntcontainer"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="Create your new account" />

                <LinearLayout
                    android:id="@+id/firstpart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp"
                        >
                        <EditText
                            android:layout_marginTop="25dp"
                            android:id="@+id/et_memberId"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawableStart="@drawable/ic_user"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Enter Kalyan Money Userid"
                            android:inputType="text"
                            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@_-"
                            android:maxLength="15"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:layout_marginTop="15dp"
                            android:id="@+id/et_leaderCode"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Enter Leader Code"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:layout_marginTop="15dp"
                            android:id="@+id/et_shopName"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Enter Shop Name"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:layout_marginTop="15dp"
                            android:id="@+id/et_shopAddress"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Enter Shop Address"
                            android:inputType="text"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp"
                            tools:ignore="Autofill,HardcodedText,InefficientWeight,RtlSymmetry" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:layout_marginTop="15dp"
                            android:id="@+id/et_ownerName"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Enter Self Name"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/red_500"/>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ly_sendRequest"
                        android:background="@drawable/extra_curve_accent_noborder"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="14dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:text="Send Request" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>