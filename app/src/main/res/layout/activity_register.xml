<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:ignore="HardcodedText,SpUsage,TextFields,Autofill,RtlSymmetry,TooManyViews,SmallSp,ContentDescription,DisableBaselineAlignment,UseCompoundDrawables"
            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ntcontainer"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Create new account" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Create your new account" />

                    <LinearLayout
                        android:id="@+id/firstpart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_marginTop="25dp"
                            android:id="@+id/firstName"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawableStart="@drawable/ic_user"
                            android:drawablePadding="15dp"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:paddingStart="15dp"
                            android:hint="Full Name"
                            android:inputType="text"
                            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@_-"
                            android:maxLength="15"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp"
                            />
                        <EditText
                            android:id="@+id/col2"
                            android:layout_marginTop="20dp"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:drawableStart="@drawable/ic_user"
                            android:drawablePadding="15dp"
                            android:visibility="gone"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:textCursorDrawable="@drawable/cursor"
                            android:paddingStart="15dp"
                            android:hint="Enter Username"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textSize="16sp"
                            />
                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/email"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_baseline_email_24"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/phoneNumber"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:digits="1234567890"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/role"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:padding="14dp"
                            android:hint="Select Role"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_user"
                            app:drawableTint="@color/colorPrimary" />

                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/password"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:drawableEnd="@drawable/ic_visibility_off_24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_pass"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:hint="Enter Password"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/font_regular"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/red_500"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />
                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/pin"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:drawableEnd="@drawable/ic_visibility_off_24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_pass"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:visibility="gone"
                            android:hint="Enter 4 Digit Pin"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />
                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/et_sponser"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:padding="14dp"
                            android:hint="Enter Sponsor ID KLYMY00001 (Optional)"
                            android:inputType="text"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/sponsorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="end"
                            />

                        <EditText
                            android:layout_marginTop="10dp"
                            android:id="@+id/et_underPlaceId"
                            android:drawableTint="@color/colorPrimary"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:padding="14dp"
                            android:hint="Enter Under Place ID KLYMY00001 (Optional)"
                            android:inputType="text"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/underplaceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:layout_gravity="end"
                            />

                        <LinearLayout
                            android:id="@+id/terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            >
                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="wrap_content"
                                android:textColorHighlight="@color/black"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/cnt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:text="I accept "
                                android:textColor="@color/grey_400" />
                            <TextView
                                android:id="@+id/cnt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:text="Privacy Policy"
                                android:visibility="gone"
                                android:textColor="@color/red" />
                            <TextView
                                android:id="@+id/cnt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:textStyle="bold"
                                android:text=" Terms &amp; Conditions"
                                android:textColor="#FA0737" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/sendotp"
                            android:background="@drawable/extra_curve_accent_noborder"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="14dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:text="Register Now" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/verifypart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_opt"
                            android:background="@drawable/input_extra_curve_white_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:singleLine="true"
                            android:padding="14dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:hint="Enter OTP"
                            android:digits="1234567890"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/register"
                            android:background="@drawable/extra_curve_accent_noborder"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="14dp"
                            android:visibility="visible"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:text="Verify OTP" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/resend"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_regular"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:text="Resend OTP" />

                            <TextView
                                android:id="@+id/skip_otp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="22dp"
                                android:layout_marginEnd="20dp"
                                android:fontFamily="@font/font_regular"
                                android:visibility="visible"
                                android:gravity="end"
                                android:text="SKIP"
                                android:textColor="@color/red"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/countdown"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="60" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/login"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Already Have Account ?, Login Now" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>